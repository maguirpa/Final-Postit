<div class = 'well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label 'Username' %>
      <%= f.text_field :username %>
      </br>
      <%= f.label 'Password' %>
      <%= f.password_field :password %>
      </br>
      <%= f.submit (@user.new_record? ? 'Sign up' : 'Update'), class: 'btn btn-success' %>
  <% end %>
</div>