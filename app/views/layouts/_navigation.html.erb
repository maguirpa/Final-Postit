<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<%= link_to 'Create Post', new_post_path, class: 'btn btn-success btn-small' %>

<div class="btn-group">
  <a class="btn dropdown-toggle btn-small btn-default" data-toggle="dropdown" href="#">
    Create Category
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <% Category.all.each do |cat| %>
    <li><%= link_to cat.name, category_path(cat) %></li>
    <% end %>
    <li class='divider'>
      <li>
        <%= link_to(new_category_path) do %>
          <i class='icon-plus'></i>
          New Category
        <% end %>
      </li>
    </li>
  </ul>

</div>