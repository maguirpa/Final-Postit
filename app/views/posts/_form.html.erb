<div class = 'well'>
  <%= form_for @post do |f| %>
    <%= f.label 'Title' %>
    <%= f.text_field :title, class: 'span5' %>
    </br>
    <%= f.label 'Website Link' %>
    <%= f.text_field :link, class: 'span5' %>
    </br>
    <%= f.label 'Description' %>
    <%= f.text_area :description, class: 'span6', rows: 6 %>    
    </br>
    <div class= 'control-group'>
      <%= f.label 'Neighborhoods' %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
      </br>
    <%= f.submit (@post.new_record? ? 'Create Apt' : 'Update Apt'), class: 'btn btn-success' %>
  <% end %>
</div>