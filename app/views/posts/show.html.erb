<div class = 'pull-right'>
  <%= link_to '[edit this post]', edit_post_path(@post) %>
</div>

<%= render 'shared/categories_badge', post: @post %>  

<%= render 'shared/page_header', title: @post.title %>
<%= @post.description %>
<hr/>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label 'New Comment' %>
  <%= f.text_area :body, class: 'span5', rows: 5 %>
  </br>
  <%= f.submit 'Create Comment', class: 'btn btn-success' %>
<% end %>

<hr/>

<% @comments.each do |comment| %>
  <div class='well'>
    <%= comment.body %>
      </p>
        By <span class='quiet'><%= comment.user.username %></span> on <%= display_time(comment.created_at) %>
      </p>
    </br>
  </div>
<% end %>

<hr/>
<%= link_to 'Back', posts_path %>