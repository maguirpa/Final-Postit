<%= render 'shared/page_header', title: "Login" %>

<div class= 'well'>
  <%= form_tag '/login' do %>
    <%= label_tag 'Username' %>
    <%= text_field_tag :username %>
    </br>
    <%= label_tag 'Password' %>
    <%= password_field_tag :password %>
    </br>
    <%= submit_tag 'Sign in', class: 'btn btn-success' %>
  <% end %>
</div>